<div>
  <h1 class="title-principal container">Lista de Productos</h1>
</div>

<div id="productN">
  
</div>

<form class = "container formulario" onsubmit="return getProductForm()">
  <h1>Formulario para agregar Producto</h1>
<div class="mb-3">
  <label for="name" class="form-label title-form">Nombre del producto</label>
  <input type="text" class="form-control" id="name" placeholder="Ingrese nombre del producto">
</div>
<div class="mb-3">
  <label for="description" class="form-label form-input">Description</label>
  <textarea class="form-control" id="description" placeholder="Descripción del producto" rows="3" cols="10"></textarea>
</div>
<div class="mb-3">
  <label for="price" class="form-label form-input">Price</label>
  <input type="text" class="form-control" id="price" placeholder="Ingrese Precio">
</div>
<div class="mb-3">
  <label for="code" class="form-label form-input">Code</label>
  <input type="text" class="form-control" id="code" placeholder="Ingrese código de producto">
</div>  
<div class="mb-3 mt-3">
  <label for="stock" class="form-label form-input">Stock</label>
  <input type="text" class="form-control" id="stock" placeholder="Ingrese cantidad disponible">
</div>
<div class="mb-3">
  <label for="genero" class="form-label form-input">Género</label>
  <input type="text" class="form-control" id="genero" placeholder="Ingrese género">
</div>  
<div>
  <button type="submit" class="btn btn-warning mt-2">Agregar</button>
</div>
</form>

<div class = "DeleteProduct">
<form class = "mt-4 container formulario" id = "FormDelete">
  <h1>Eliminar Producto</h1>
  <div>
    <label for="id" class="form-label title-form">ID del producto</label>
    <input type="text" class="form-control" id="id" placeholder="Ingrese el ID del producto">
  </div>
  <div>
  <button type="submit" class="btn btn-warning mt-4" id="ButtonDelete">Borrar</button>
</div>
</form>
</div>



