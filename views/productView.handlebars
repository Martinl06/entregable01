{{! Description: Vista de producto seleccionado }}
<div class="box-product">
<h1 class="title-principal-productView container">Productos Seleccionados</h1>
{{#if cart1}}
{{#if productGet}}
<div class="card container mt-5 cardsBody"style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src={{productGet.thumbnail}} class="card-img" alt="imagen del producto">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title">{{productGet.name}}</h5>
        <p class="card-text"> ID del producto: {{productGet._id}}</p>
        <p class="card-text"> Description: {{productGet.description}}</p>
        <p class="card-text"> Precio: $ {{productGet.price}}</small></p>
        <p class="card-text"> Stock: {{productGet.stock}}</small></p>
        <p class="card-text"> Código: {{productGet.code}}</small></p>
        <p class="card-text"> Género: {{productGet.genero}}</small></p>
        <form action="/api/cart/{{cart1._id}}/products/{{productGet._id}}" method="POST">
            <button type="submit" class="btn btn-primary mt-1">Agregar al carrito</button>
        </form>

        <a href="/api/products" class="btn btn-primary mt-2">Volver</a>
      </div>
    </div>
  </div>
</div>
{{/if}}
{{/if}}
</div>
