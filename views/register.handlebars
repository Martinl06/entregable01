<div class="container mt-5" align="center" justify="center" text-align="center">
    <div class = 'formRegister'>
    <h1 class = 'titleLogin'>REGISTER</h1>
    <form action="/api/auth/register" method="post">
        <div class="mb-1 formLabel">
            <label for="Name" class = "form-label">Name:</label>
            <input type="text" class = "form-control" name="name" placeholder="Enter your Name" required>
        </div>
        <div class="mb-1 formLabel">
            <label for="LastName" class="form-label">LastName:</label>
            <input type="text" class="form-control" name="lastName" placeholder="Enter your LastName" required>
        </div>
        <div class="mb-1 formLabel">
            <label for="UserName" class = 'form-label'>UserName:</label>
            <input type="text" class="form-control" name="userName" placeholder="Enter your UserName" required>
        </div>
        <div class="mb-1 formLabel">
            <label for="Email" class="form-label">Email:</label>
            <input type="email" class="form-control" name="email" placeholder="Enter your Email" required>
        </div>
            <div class="mb-1 formLabel">
            <label for="Age" class ='form-label'>Age:</label>
            <input type="age" class ='form-control' name="age" placeholder="Enter your Age" required>
        </div>
        <div class="mb-1 formLabel">
            <label for="Password" class="form-label">Password:</label>
            <input type="password" class="form-control" name="password" placeholder="Enter your password" required>
        </div>
        <div class="mt-3">
            <button type="submit" value="Register" class="btn btn-warning">Register</button>
        </div>
        <div class="mb-1 formLabel">
            <h6 class = 'mt-3'>Do you have account?</h6>
            <a class = 'register' href="/api/sessions/login">Login</a>
        </div> 
        </div>   
</div>