{{#if cart}}
    <div class="card">
    <p>cart {{cart._id}}</p>
    <ul>
        {{#each cart.productGet}}
        <li>
            <div class="bg-secondary">
                <img src="" alt="Imagen"
                    class="card-image">

            <p>Nombre del producto: {{this.productGet.title}}</p>
            <p>Precio: $ {{this.productGet.price}}</p>
            <p>Cantidad: {{this.quantity}}</p>
            </div>
        </li>
        
        {{/each}}
    </ul>
    <button class="card-button bg-success">Comprar</button>
    </div>
   
{{/if}}